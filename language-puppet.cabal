  hs-source-dirs:      progs
  extensions:          BangPatterns, OverloadedStrings
  ghc-options:         -Wall -rtsopts -threaded
  -- ghc-prof-options:    -auto-all -caf-all -fprof-auto
  build-depends:       base
                     , aeson
                     , bytestring
                     , http-client
                     , language-puppet
                     , lens
                     , mtl
                     , optparse-applicative
                     , servant-client
                     , strict-base-types
                     , text
                     , transformers
                     , unordered-containers
                     , vector
                     , yaml
  main-is:             pdbQuery.hs
