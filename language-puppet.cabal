                     , Glob
                     , aeson
                     , bytestring
                     , containers
                     , transformers
                     , mtl
                     , hslogger
                     , http-client
                     , language-puppet
                     , lens
                     , megaparsec
                     , optparse-applicative
                     , parallel-io
                     , regex-pcre-builtin
                     , servant-client
                     , strict-base-types
                     , text
                     , unordered-containers
                     , vector
  main-is:             PuppetResources.hs

